<%if(userdata.isValid==false){%>
<h2>link expired</h2>
<%}else{%>

<h1>Create New Password for <%=userdata.user.email%></h1>
<form action="/users/createnewpassword/<%=userdata.accessToken%>" method="POST">
  <input type="password" name="password" placeholder="password" required />
  <input
    type="password"
    name="confirmpassword"
    placeholder="Confirm-password"
    required
  />
  <input type="hidden" name="email" value="<%=userdata.user.email%>" required />
  <input type="submit" value="Submit" />
</form>
<%}%>
