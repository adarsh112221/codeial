<h1>Create New Password for <%=forgottenuser%></h1>

<form action="/users/createnewpassword" method="POST">
  <input type="password" name="password" placeholder="password" required />
  <input
    type="password"
    name="confirmpassword"
    placeholder="Confirm-password"
    required
  />
  <input
  type="hidden"
  name="email"
  value="<%=forgottenuser%>"
  required
/>
  <input type="submit" value="Submit" />
</form>
